generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Evaluation {
  id              String   @id @default(uuid())
  partnerKey      String?
  visaId          String
  country         String
  normalizedScore Float
  cappedScore     Float
  status          String
  highlights      String[]
  gaps            String[]
  advice          String[]
  submission      Json
  signals         Json
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now()) @updatedAt

  @@index([partnerKey])
}
